<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ============= Artificer ============= -->

    <WorkGiverDef>
        <defName>ABF_MechanicTendEmergency</defName>
        <label>repair patients with urgent needs</label>
        <giverClass>ArtificialBeings.WorkGiver_TendOtherUrgentMech</giverClass>
        <workType>ABF_Artificer</workType>
        <emergency>true</emergency>
        <verb>repair</verb>
        <gerund>repairing</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <priorityInType>110</priorityInType>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

